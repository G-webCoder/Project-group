/* component/modal/modal.wxss */
.modal-mask{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999999999;
  background-color: rgba(0, 0, 0,.3)
}
.modal-block{
  width: 210px;
  padding: 0 10px;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%,-50%,0);
  background-color: rgb(255, 255, 255);
  border-radius: 8px;
}
.modal-title{
  font-size: 12px;
  font-weight: 700;
  text-align: center;
  padding: 5px 0;
}
.modal-cont{
  width: 100%;
  display:flex;
  align-items: center;
  padding-bottom: 10px;
}

.inp-wrap{
  flex: 1;
}
.left-text{
  flex: 0 0 56px;
  width: 56px;
  height: 18px;
  line-height: 16px;
  text-align: center;
}
.inp{
  height: 18px;
  font-size: 12px;
  padding: 0 5px;
  border: none;
}
.inp-holder{
  font-size: 12px;
  color: #b4b2b3;
}
.modal-oper{
  height: 36px;
  display: flex;
  align-items: center;
  border-top: 1px solid #e9eaec;
}
.cancel{
  flex: 1;
  border-right: 1px solid #e9eaec;
}
.sure{
  flex: 1;
}
.sure text{
  color: #fe8d55;
}
.cancel,.sure{
  font-size: 12px;
  line-height: 12px;
  padding: 3px 0;
  margin: 5px 0;
  text-align: center;
}