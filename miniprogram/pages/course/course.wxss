/* pages/course/course.wxss */

.course-banner{
  height: 340rpx;
}

.course-title{
  font-size: 13px;
  font-weight: 700;
  text-align: center;
}

.course-cont{
  display: flex;
  flex-wrap: wrap;
  padding: 10px 0;
  margin-left: -5px;
}
.course-list{
  flex: 0 0 50%;
  width: 50%;
  padding-left: 5px;
  box-sizing: border-box;
  font-size: 0;
}
.course-list image{
  height: 245rpx;
}
.list-text{
  border: 1px solid rgb(248, 248, 255);
  border-top: 0px;
  padding: 5px 5px 10px;
}
.list-text text{
  display: block;
}
.title{
  font-weight: 700;
  text-align: center;
  padding: 5px 0;
}
.descable{
  font-size: 12px;
  height: 34px;
}
.list-bottom{
  margin-top: 10px;
}
.list-bottom text{
  display: inline;
}
.price{
  float: left;
  font-size: 14px;
  line-height: 14px;
  color: #f00;
}
.course-timer{
  float: right;
  font-size: 12px;
  line-height: 14px;
  color: #b4b2b3;
}