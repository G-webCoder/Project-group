/* pages/trends/tabDiary/tabDiary.wxss */
.addRrl-mid-wrap{
  padding-top: 90rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.list-item{
  margin-bottom: 10px;
}
.item-user-top{
  width: 100%;
  height: 38px;
  margin: 20rpx 0;
  position: relative;
  left: 0;
  top: 0;
}
.user-top-avatar{
  width: 38px;
  height: 38px;
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
}
.user-top-avatar .user-avatar{
  width: 100%;
  height: 38px;
  border-radius: 50%;
  vertical-align: middle;
}
.user-top-avatar .user-sex{
  width: 12px;
  height: 12px;
  border-radius: 50%;
  position: absolute;
  bottom:0;
  right:3px;
  background-color:rgb(219, 30, 9);
}
.user-top-nickname{
  position: absolute;
  top: 0;
  left: 48px;
}
.user-nickname{
  font-weight:700;
  color:#528B8B;
}
.user-nickname text{
  font-size: 13px;
  color:#528B8B;
}
.user-time text{
  font-size: 12px;
}
.user-top-oper{
  width: 54px;
  position: absolute;
  top:0;
  left: initial;
  right: 0;
}
.set-top{
  width:28px;
  height: 16px;
  line-height: 16px;
  text-align: center;
  font-size: 10px;
  border: 1px solid #FF8247;
  color: #FF8247;
  border-radius: 3px;

}
.item-user-cont{
  width: 100%;
}
.oper-btn{
  display: flex;
}
.oper-btn .btn{
  flex: 1;
}
.item-user-cont{
  position: relative;
  padding-left: 48px;
  box-sizing: border-box;
}
.item-user-cont text{
  line-height: 18px;
}
.item-user-cont video{
  max-width: 100%;
}
.oper-btn{
  margin: .625rem 0;
}
.oper-btn .active{
  color:#FF8247;
}
.praise-wrap{
  padding:10px;
  box-sizing: border-box;
  background-color: #FDF5E6;
  border:1px solid #FFDEAD;
  border-radius: 5px;
}
.praise-pel-infor{
  position: relative;
  width: 100%;
  height: 32px;
  top: 0;
  left: 0;
}
.praise-pel-infor::before{
  content: ' ';
  display: block;
  position: absolute;
  width: 10px;
  height: 10px;
  background-color: #FDF5E6;
  transform: rotate(-45deg);
  border:1px solid #FFDEAD;
  border-bottom:none;
  border-left: none;
  top:-16px;
  right: 19%;
}
.pel-infor-avatar{
  position: absolute;
  left: 0;
  top: 0;
}
.pel-infor-avatar image{
  width: 32px;
  height: 32px;
  border-radius: 50%;
}
.pel-infor-nickname{
  position: absolute;
  left: 38px;
  top: 0;
}

.pel-nickname text{
  font-size: 12px;
  line-height: 12px;
}
.pel-infor-nickname .user-time text{
  font-size: 10px;
  line-height: 10p;
}
.parise-cont text{
  color: #8B7355;
}
.parise-cont-mark,.parise-cont-keywords,.parise-text{
  padding-top: 10px;
}
.keywords{
  position: relative;
  display: inline-block;
  padding:0 5px;
  margin-left:5px;
  border: 1px solid #8B7355;
  border-radius: 3px;
}
.pel-heart{
  padding: 5px;
  margin-top: 10px;
  background-color: #e1f4fa;
  border-radius: 5px;
  color: #7EC0EE;
}