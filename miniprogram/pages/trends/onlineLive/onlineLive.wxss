/* miniprogram/pages/index/tabFour/tabFour.wxss */
@import '../../../app.wxss';
.live-wrap{
  width: 100%;
  padding: 90rpx 0 0;
  margin-top: 0px;
  overflow: hidden;
}
.live-wrap::after{
  contain: ' ';
  display: block;
  clear: both;
}
.live-item{
  height: 320rpx;
  box-sizing: border-box;
}
.live-title{
  text-align: center;
  margin-bottom: 10px;
}
.clum-title{
  font-size: 13px;
  line-height: 13px;
  font-weight: 700;
  background-color: rgb(255, 255, 255)
}
.hot-item{
  height: auto;
}
.hot-icon{
  width: 82px;
  height: 50px;
  text-align: center;
  position: absolute;
  top: -25px;
  left: 10px;
  z-index: 9;
  border-radius: 5px;
}
.live-cont{
  width: 100%;
  height: 190px;
  position: relative;
  left: 0;
  top: 0;
}
.live-video{
  width: 100%;
  position: relative;
  left: 0;
  top:0;
}
.mask-box{
  display: table;
  width: 100%;
  height: 190px;
  background-color: rgba(0, 0, 0,.3);
}
.center{
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}
.center text{
  font-weight: 700;
  line-height: 13px;
  margin-top: 5px;
  color: rgb(255, 255, 255);
}
.mask-box,.cont{
  position: absolute;
  z-index: 6;
}
.cont{
  left: 10px;
  right: 10px;
  bottom: 5px;
}
.icon{
  width: 24px;
  height: 24px;
  margin: 0 auto;
}
.cont text{
  font-size: 12px;
  line-height: 12px;
  color: rgb(255, 255, 255);
}
.title{
  font-size: 13px;
  line-height: 13px;
  font-weight: 700;
  margin-bottom: 5px;
}
.video-cont{
  height: 190px;
}

.live-poser{
  height: 155px;
  margin: 0 10px;
}
.live-list-cont{
  display: flex;
  flex-wrap: wrap;
  height: 100%;
  margin-left:-10px;
}
.list-wrap{
  height: auto;
}
.list-wrap .mask-box,.list-wrap .video-cont{
  height: 142px;
}
.live-list-item{
  flex: 1;
  width: 50%;
  max-width: 50%;
  min-width: 50%;
  padding:10px 0px 0px 10px;
  box-sizing: border-box;
}