/* miniprogram/pages/addRelease/addRelease.wxss */
@import '../common/common.wxss';
.addRel-top-wrap{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 90rpx;
  display: flex;
  display: -webkit-flex;
  justify-content:center;
  align-items: center;
  background: #fff;
  background-color: #fff;
  border-bottom: 1px solid #F5F5F5;   
}
.top-tab-item{
  flex: 1;
  height: 100%;
  line-height: 90rpx;
  text-align: center;
}
.addRel-top-wrap .active{
  color:#FF8247;
  font-weight:500;
  border-bottom: 1px solid #FF8247;
}

