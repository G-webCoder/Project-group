/* miniprogram/pages/article/article.wxss */
.item-wrap{
  width: 100%;
  display: flex;
  align-items:center;
  overflow: hidden;
}
.item-cont{
  flex: 1;
  overflow: hidden;
}
.item-oper{
  width: 100%;
  display: flex;
}
.oper{
  flex: 1;
  color: #b4b2b3;
}
.timer{
  flex: 0 0 86px;
}
.oper text{
  font-size: 10px;
  color: #b4b2b3;
  vertical-align: middle;
}
.descable{
  font-size:0px;
  line-height: 0;
  height: auto;
}
.descable text{
  font-size: 12px;
  line-height: 18px;
  color: #b4b2b3;
}
.item-thumb{
  flex: 0 0 80px;
  width: 80px;
  height: 68px;
  margin-left: 5px;
  align-items:center;
}
.list-img{
   margin:5px 0 0 -3px;
}
.img-wrap{
  width: 100%;
  display: flex;
}
.img{
  flex: 1;
  padding-left: 3px;
  height: auto;
  max-height: 82px;
  overflow: hidden;
}